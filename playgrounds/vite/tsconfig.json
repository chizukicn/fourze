{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@fourze/core": ["../../packages/core/src/index.ts"],
      "@fourze/mock": ["../../packages/mock/src/index.ts"],
      "@fourze/server": ["../../packages/server/src/index.ts"],
      "@fourze/vite": ["../../packages/integrations/vite/src/index.ts"],
      "@fourze/webpack": ["../../packages/integrations/webpack/src/index.ts"],
      "@fourze/unplugin": ["../../packages/integrations/unplugin/src/index.ts"],
      "@fourze/nuxt": ["../../packages/integrations/nuxt/src/index.ts"],
      "@fourze/swagger": ["../../packages/integrations/swagger/src/index.ts"],
      "@fourze/middlewares": ["../../packages/middlewares/src/index.ts"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts", "src/**/*.vue", "vite.config.ts"],
  "exclude": ["node_modules", "dist"]
}
