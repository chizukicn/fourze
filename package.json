{
    "name": "@fourze/monorepo",
    "private": true,
    "version": "0.20.2",
    "description": "a mock framework",
    "files": [
        "dist/*"
    ],
    "keywords": [
        "mock",
        "web",
        "vite",
        "hmr"
    ],
    "scripts": {
        "build": "rimraf packages/*/dist && pnpm -r --filter=./packages/* build",
        "stub": "pnpm -r --filter=./packages/* --parallel run stub",
        "play:vite": "pnpm build &&  pnpm -r --filter=./playgrounds/vite dev",
        "play:vite-mock": "pnpm build &&  pnpm -r --filter=./playgrounds/vite dev --mode mock",
        "play:vue-cli": "pnpm stub &&  pnpm -r --filter=./playgrounds/vue-cli dev",
        "play:server": "pnpm -r --filter=./playgrounds/server dev",
        "play:nuxt": "pnpm stub &&  pnpm -r --filter=./playgrounds/nuxt-app dev",
        "play:nuxt-mock": "pnpm build &&  pnpm -r --filter=./playgrounds/nuxt-app preview",
        "build:vite-mock": "pnpm build &&  pnpm -r --filter=./playgrounds/vite build --mode mock",
        "test": "pnpm stub && vitest",
        "bump": "pnpm build && vitest run && bumpp package.json packages/*/package.json --commit --push --tag",
        "preinstall": "npx only-allow pnpm",
        "postinstall": "husky install",
        "regit": "git fetch --all && git reset --hard origin/main && git pull && git remote prune origin"
    },
    "author": "chizuki",
    "license": "MIT",
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@fourze/core": "workspace:*",
        "@fourze/server": "workspace:*",
        "@fourze/mock": "workspace:*",
        "@types/node": "^18.6.0",
        "bumpp": "^8.2.1",
        "chokidar": "^3.5.3",
        "esno": "^0.16.3",
        "husky": "^8.0.1",
        "lint-staged": "^13.0.3",
        "maybe-types": "^0.0.3",
        "node-fetch": "^3.2.10",
        "prettier": "^2.7.1",
        "rimraf": "^3.0.2",
        "typescript": "^4.8.4",
        "unbuild": "^0.8.8",
        "vitest": "^0.24.0"
    }
}
