{
  "name": "@fourze/monorepo",
  "private": true,
  "version": "0.22.0",
  "description": "a mock framework",
  "files": [
    "dist/*"
  ],
  "keywords": [
    "mock",
    "web",
    "vite",
    "hmr"
  ],
  "scripts": {
    "bench":"pnpm -C bench run bench",
    "build": "pnpm -r --filter=./packages/** build",
    "stub": "pnpm -r --parallel --filter=./packages/**  run stub",
    "lint": "eslint ./packages/ --ext .ts",
    "play:vite": "pnpm build &&  pnpm -r --filter=./playgrounds/vite dev",
    "play:vite-mock": "pnpm build &&  pnpm -r --filter=./playgrounds/vite dev --mode mock",
    "play:vue-cli": "pnpm build &&  pnpm -r --filter=./playgrounds/vue-cli dev",
    "play:server": "pnpm -r --filter=./playgrounds/server dev",
    "play:nuxt": "pnpm stub &&  pnpm -r --filter=./playgrounds/nuxt-app dev",
    "play:nuxt-mock": "pnpm build &&  pnpm -r --filter=./playgrounds/nuxt-app preview",
    "build:vite-mock": "pnpm build &&  pnpm -r --filter=./playgrounds/vite build --mode mock",
    "test": "pnpm stub && vitest",
    "bump": "pnpm install && pnpm build && vitest run && bumpp package.json !**/node_modules/** packages/**/package.json --commit --push --tag",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "husky install",
    "regit": "git fetch --all && git reset --hard origin/main && git pull && git remote prune origin"
  },
  "author": "chizuki",
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@curev/eslint-config": "^0.0.6",
    "@fourze/core": "workspace:*",
    "@fourze/mock": "workspace:*",
    "@fourze/server": "workspace:*",
    "@types/node": "^18.6.0",
    "autocannon": "^7.10.0",
    "bumpp": "^8.2.1",
    "chokidar": "^3.5.3",
    "eslint": "^8.27.0",
    "esno": "^0.16.3",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "node-fetch": "^3.2.10",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.4",
    "unbuild": "^1.0.2",
    "vitest": "^0.24.0"
  }
}
