{
  "name": "@fourze/monorepo",
  "private": true,
  "version": "0.0.4",
  "description": "a mock framework",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "rimraf packages/*/dist && pnpm -r --filter !examples run build",
    "dev:web": "vite ./examples/web",
    "dev:web-mock": "vite ./examples/web --mode mock",
    "build:web-mock": "vite build ./examples/web --mode mock",
    "test": "echo \"Error: no test specified\" && exit 1",
    "release": "bumpp package.json packages/*/package.json --commit --push --tag",
    "publish": "pnpm build && pnpm -r publish --access public",
    "postinstall": "husky install"
  },
  "author": "apateat",
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.3",
    "@rollup/plugin-json": "^4.1.0",
    "@types/node": "^17.0.23",
    "bumpp": "^7.1.1",
    "chokidar": "^3.5.3",
    "esbuild": "^0.14.31",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.70.1",
    "rollup-plugin-dts": "^4.2.0",
    "rollup-plugin-esbuild": "^4.8.2",
    "typescript": "^4.6.3"
  }
}
