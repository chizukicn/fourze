{
    "name": "@fourze/monorepo",
    "private": true,
    "version": "0.3.8",
    "description": "a mock framework",
    "files": [
        "dist/*"
    ],
    "keywords": [
        "mock",
        "web",
        "vite",
        "hmr"
    ],
    "scripts": {
        "build": "rimraf packages/*/dist && pnpm -r --filter=./packages/* build",
        "stub": "pnpm -r --filter=./packages/* --parallel run stub",
        "play:web": "pnpm build && vite ./playgrounds/web --mode mock",
        "play:mock": "vite ./playgrounds/web --mode mock",
        "play:build": "vite build ./playgrounds/web --mode mock",
        "play:server": "pnpm stub && pnpm -r --filter=playgrounds-server dev",
        "test": "echo \"Error: no test specified\" && exit 1",
        "bump": "bumpp package.json packages/*/package.json --commit --push --tag",
        "postinstall": "husky install"
    },
    "author": "chizuki",
    "license": "MIT",
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@types/node": "^18.0.6",
        "bumpp": "^7.1.1",
        "chokidar": "^3.5.3",
        "esno": "^0.16.3",
        "husky": "^7.0.4",
        "lint-staged": "^12.3.7",
        "prettier": "^2.6.2",
        "rimraf": "^3.0.2",
        "typescript": "^4.7.4",
        "unbuild": "^0.7.6"
    }
}
